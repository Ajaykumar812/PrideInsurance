@page
@model Pride.Areas.Dashboard.Pages.Client.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <!-- Responsive Table -->
    <div class="col-lg-12">
        <div class="panel panel-default border-panel card-view">
            <div class="panel-heading">
                <div class="pull-left">
                    <h6 class="panel-title txt-dark">Client List </h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <p class="text-muted"><a asp-page="./Create" class="btn btn-danger">Add Client</a></p>
                    <div class="table-wrap mt-40">
                        <div class="table-responsive">
                            <table class="table table-responsive table-striped table-hover">
                                <thead style="background-color:#003366;">
                                    <tr class="text-center" style="color:white;">
                                                               
                                       <th style="color:#FF9966;">
                                                    @Html.DisplayNameFor(model => model.Clients[0].CoverageType)
                                        </th>
                                        <th style="color:#FF9966;">
                                                    @Html.DisplayNameFor(model => model.Clients[0].Broker)
                                        </th>
                                        <th style="color:#FF9966;">
                                                    @Html.DisplayNameFor(model => model.Clients[0].ClientInsuranceCompany)
                                        </th>
                                        <th style="color:#FF9966;">
                                                    @Html.DisplayNameFor(model => model.Clients[0].PolicyNumber)
                                        </th>
                                        <th style="color:#FF9966;">
                                                    @Html.DisplayNameFor(model => model.Clients[0].Effectivedate)
                                        </th>
                                        <th style="color:#FF9966;">
                                                    @Html.DisplayNameFor(model => model.Clients[0].Expirydate)
                                        </th>
                                        <th style="color:#FF9966;">
                                                    @Html.DisplayNameFor(model => model.Clients[0].PremiumAmount)
                                        </th>
                                        <th style="color:#FF9966;">
                                                    @Html.DisplayNameFor(model => model.Clients[0].Taxfees)
                                        </th>
                                        <th style="color:#FF9966;">
                                                    @Html.DisplayNameFor(model => model.Clients[0].Sumtotalpremium)
                                        </th>
                                        <th style="color:#FF9966;">
                                                    @Html.DisplayNameFor(model => model.Clients[0].financecompany)
                                        </th>
                                        <th style="color:#FF9966;">
                                                    @Html.DisplayNameFor(model => model.Clients[0].DownPayment)
                                        </th>
                                        <th style="color:#FF9966;">
                                                    @Html.DisplayNameFor(model => model.Clients[0].DownPaymentReceived)
                                        </th>
                                        <th style="color:#FF9966;">
                                                    @Html.DisplayNameFor(model => model.Clients[0].PendingDownPayment)
                                        </th>
                                        <th style="color:#FF9966;">
                                                    @Html.DisplayNameFor(model => model.Clients[0].Commission)
                                        </th>
                                        <th style="color:#FF9966;">
                                                    @Html.DisplayNameFor(model => model.Clients[0].Brokerge)
                                        </th>
                                        <th style="color:#FF9966;">
                                                    @Html.DisplayNameFor(model => model.Clients[0].Commissionrecived)
                                        </th>
                                        <th style="color:#FF9966;">
                                                    @Html.DisplayNameFor(model => model.Clients[0].Balancecommission)
                                        </th>
                                        <th style="color:#FF9966;">
                                                    @Html.DisplayNameFor(model => model.Clients[0].Payments)
                                        </th>
                                        <th style="color:#FF9966;">
                                                    @Html.DisplayNameFor(model => model.Clients[0].Pendingpayment)
                                        </th                                     
                                        <th></th>
                                    </tr>
                                </thead>
                            <tbody>
                        @foreach (var item in Model.Clients) {
                            <tr>
                              <td>
                                @Html.DisplayFor(modelItem => item.CoverageType)
                              </td>

                              <td>
                                @Html.DisplayFor(modelItem => item.Broker)
                              </td>
                              <td>
                                 @Html.DisplayFor(modelItem => item.ClientInsuranceCompany)
                              </td>
                              <td>
                                 @Html.DisplayFor(modelItem => item.PolicyNumber)
                              </td>
                              <td>
                                 @Html.DisplayFor(modelItem => item.Effectivedate)
                              </td>
                              <td>
                                 @Html.DisplayFor(modelItem => item.Expirydate)
                              </td>
                              <td>
                                 @Html.DisplayFor(modelItem => item.PremiumAmount)
                              </td>
                              <td>
                                 @Html.DisplayFor(modelItem => item.Taxfees)
                              </td>
                              <td>
                                 @Html.DisplayFor(modelItem => item.Sumtotalpremium)
                              </td>
                              <td>
                                 @Html.DisplayFor(modelItem => item.financecompany)
                              </td>
                              <td>
                                 @Html.DisplayFor(modelItem => item.DownPayment)
                              </td>
                              <td>
                                 @Html.DisplayFor(modelItem => item.DownPaymentReceived)
                              </td>
                              <td>
                                 @Html.DisplayFor(modelItem => item.PendingDownPayment)
                              </td>
                              <td>
                                 @Html.DisplayFor(modelItem => item.Commission)
                              </td>
                              <td>
                                 @Html.DisplayFor(modelItem => item.Brokerge)
                              </td>
                              <td>
                                 @Html.DisplayFor(modelItem => item.Commissionrecived)
                              </td>
                              <td>
                                 @Html.DisplayFor(modelItem => item.Balancecommission)
                              </td>
                              <td>
                                 @Html.DisplayFor(modelItem => item.Payments)
                              </td>
                              <td>
                                 @Html.DisplayFor(modelItem => item.Pendingpayment)
                              </td>
                              <td>
                                 <a asp-page="./Edit" asp-route-id="@item.id">Edit</a> |
                                 <a asp-page="./Details" asp-route-id="@item.id">Details</a> |
                                 <a asp-page="./Delete" asp-route-id="@item.id">Delete</a>
                              </td>
                            </tr>
                               }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



