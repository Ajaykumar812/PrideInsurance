@page
@model Pride.Areas.Dashboard.Pages.States.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StateList[0].StateName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StateList[0].StateAbbreviation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.StateList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StateAbbreviation)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.StateID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.StateID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.StateID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
