@page
@model Pride.Areas.Dashboard.Pages.TblUserList.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default border-panel card-view">
            <div class="panel-heading">
                <div class="pull-left">
                    <h6 class="panel-title txt-dark">Add New User</h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <div class="form-wrap">
                        <div class="row">
                            <div class="col-md-12">
                                <form method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                       <label asp-for="TblUser.UserName" class="control-label mb-10 text-left"></label>
                                        <input asp-for="TblUser.UserName" class="form-control" />
                                        <span asp-validation-for="TblUser.UserName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="TblUser.Email" class="control-label mb-10 text-left"></label>
                                        <input asp-for="TblUser.Email" class="form-control" type="email" />
                                        <span asp-validation-for="TblUser.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="TblUser.PhoneNumber" class="control-label mb-10 text-left"></label>
                                        <input asp-for="TblUser.PhoneNumber" class="form-control" />
                                        <span asp-validation-for="TblUser.PhoneNumber" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="TblUser.Role" class="control-label mb-10 text-left"></label>
                                        <select asp-for="TblUser.Role" class="form-control">
                                            <option>User</option>
                                            <option>Admin</option>
                                        </select>
                                        <span asp-validation-for="TblUser.Role" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="TblUser.Password" class="control-label mb-10 text-leftl"></label>
                                        <input asp-for="TblUser.Password" class="form-control" />
                                        <span asp-validation-for="TblUser.Password" class="text-danger"></span>
                                    </div>
                                
                                 
                                 
                                   
                                    <div class="col-md-12 col-lg-12">
                                        <h5>Menu</h5>
                                        <div class="control-group">
                                            <div class="controls">
                                                <div class="input-prepend input-group">
                                                    @foreach (var item in Model.MenuList)
                                                    {
                                                        <div class="checkbox checkbox-success">
                                                            <input id="@item.Id" type="checkbox" name="menu" value="@item.Id">
                                                            <label for="@item.Id">
                                                                @item.Menu
                                                            </label>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                        <a href="./index" value="Cancel" class="btn btn-success">Cancel</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                      
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
