@page
@model Pride.Areas.Dashboard.Pages.TblUserList.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <!-- Responsive Table -->
    <div class="col-lg-12">
        <div class="panel panel-default border-panel card-view">
            <div class="panel-heading">
                <div class="pull-left">
                    <h6 class="panel-title txt-dark">User List </h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <p class="text-muted"><a asp-page="./Create" class="btn btn-danger">Add New User</a></p>
                    <div class="table-wrap mt-40">
                        <div class="table-responsive">
                            <table class="table table-responsive table-striped table-hover">
                                <thead style="background-color:#003366;">
                                    <tr class="text-center" style="color:white;">
                                        <th style="color:#FF9966;">
                                            @Html.DisplayNameFor(model => model.TblUser[0].UserName)
                                        </th>
                                        <th style="color:#FF9966;">
                                            @Html.DisplayNameFor(model => model.TblUser[0].Email)
                                        </th>
                                        <th style="color:#FF9966;">
                                            Phone Number
                                        </th>
                                        <th style="color:#FF9966;">
                                            @Html.DisplayNameFor(model => model.TblUser[0].Role)
                                        </th>
                                     
                                     
                                
                                   
                                    
                                        <th style="color:#FF9966;">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.TblUser)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.UserName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Role)
                                            </td>
                                         
                                     
                                          
                                        

                                            <td>
                                                <a asp-page="./Edit" asp-route-id="@item.Id"><i class="fa fa-pencil text-success"></i></a>
                                                <a asp-page="./Details" asp-route-id="@item.Id"><i class="fa fa-info-circle text-primary"></i></a>
                                                <a asp-page="./Delete" asp-route-id="@item.Id"><i class="fa fa-trash text-danger"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
