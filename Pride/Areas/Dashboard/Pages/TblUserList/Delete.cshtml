@page
@model Pride.Areas.Dashboard.Pages.TblUserList.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<!-- Title -->
<div class="row heading-bg">


    <!-- Breadcrumb -->
    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
        <ol class="breadcrumb">
            <li><a href="index.html">Dashboard</a></li>
            <li><a href="#"><span>forms</span></a></li>
            <li class="active"><span>form-advanced</span></li>
        </ol>
    </div>
    <!-- /Breadcrumb -->

</div>
<!-- /Title -->
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default border-panel card-view">
            <div class="panel-heading">
                <div class="pull-left">
                    <h6 class="panel-title txt-dark"> <h3>Are you sure you want to delete this?</h3></h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <div class="form-wrap">
                        <div class="row">
                            <div class="col-md-12">
                               
                                <div>
                                    <h4>Details</h4>
                                    @* <hr /> *@
                                    <dl class="row">
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.TblUser.UserName)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.TblUser.UserName)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.TblUser.Email)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.TblUser.Email)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.TblUser.PhoneNumber)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.TblUser.PhoneNumber)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.TblUser.Role)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.TblUser.Role)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.TblUser.Password)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.TblUser.Password)
                                        </dd>
                                    </dl>
                                    <form method="post">
                                        <input type="hidden" asp-for="TblUser.Id" />
                                        <input type="submit" value="Delete" class="btn btn-danger" />
                                        <a href="./index" value="Cancel" class="btn btn-success">Cancel</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




