@page
@model Pride.Areas.Dashboard.Pages.FinanceCompanies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <!-- Responsive Table -->
    <div class="col-lg-12">
        <div class="panel panel-default border-panel card-view">
            <div class="panel-heading">
                <div class="pull-left">
                    <h6 class="panel-title txt-dark">Finance Companies List </h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <p class="text-muted"><a asp-page="./Create" class="btn btn-danger">Add Finance Company</a></p>
                    <div class="table-wrap mt-40">
                        <div class="table-responsive">
                            <table class="table table-responsive table-striped table-hover">
                                <thead style="background-color:#003366;">
                                    <tr class="text-center" style="color:white;">
                                        <th style="color:#FF9966;">
                                            @Html.DisplayNameFor(model => model.FinanceCompany[0].FinanceCompanyName)
                                        </th>
                                        <th style="color:#FF9966;">
                                            @Html.DisplayNameFor(model => model.FinanceCompany[0].Address)
                                        </th>
                                        <th style="color:#FF9966;">
                                            @Html.DisplayNameFor(model => model.FinanceCompany[0].ContactNumber)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.FinanceCompany)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FinanceCompanyName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Address)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ContactNumber)
                                            </td>
                                            <td>
                                                <a asp-page="./Edit" asp-route-id="@item.Id"><i class="fa fa-pencil text-success"></i></a>
                                                <a asp-page="./Details" asp-route-id="@item.Id"><i class="fa fa-info-circle text-primary"></i></a>
                                                <a asp-page="./Delete" asp-route-id="@item.Id"><i class="fa fa-trash text-danger"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
