@page
@model Pride.Areas.Dashboard.Pages.LeadList.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <!-- Responsive Table -->
    <div class="col-lg-12">
        <div class="panel panel-default border-panel card-view">
            <div class="panel-heading">
                <div class="pull-left">
                    <h6 class="panel-title txt-dark">Lead List </h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <p class="text-muted"><a asp-page="./Create" class="btn btn-danger">Add New Lead</a></p>
                    <div class="table-wrap mt-40">
                        <div class="table-responsive">
                            <table class="table table-responsive table-striped table-hover">
                                <thead style="background-color:#003366;">
                                    <tr class="text-center" style="color:white;">
                                        <th style="color:#FF9966;">
                                            Date
                                        </th>
                                        <th style="color:#FF9966;">
                                            @Html.DisplayNameFor(model => model.Leads[0].Name)
                                        </th>
                                        <th style="color:#FF9966;">
                                            @Html.DisplayNameFor(model => model.Leads[0].Company)
                                        </th>
                                        <th style="color:#FF9966;">
                                            @Html.DisplayNameFor(model => model.Leads[0].ContactNo)
                                        </th>
                                        <th style="color:#FF9966;">
                                            @Html.DisplayNameFor(model => model.Leads[0].EMail)
                                        </th>
                                        <th style="color:#FF9966;">
                                            @Html.DisplayNameFor(model => model.Leads[0].LeadStatus)
                                        </th>
                                 
                                        <th style="color:#FF9966;">
                                            Added By
                                        </th>
                                  
                                        <th style="color:#FF9966;">
                                            @Html.DisplayNameFor(model => model.Leads[0].ContactPerson)
                                        </th>
                                        
                                        <th style="color:#FF9966;">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Leads)
                                    {
                                        <tr>
                                            <td>
                                                @item.date.ToShortDateString()
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Company)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ContactNo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EMail)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LeadStatus)
                                            </td>
                                          
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EmpyeeName)
                                            </td>
                                     
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ContactPerson)
                                            </td>
                                            
                                            <td>
                                                <a asp-page="./Edit" asp-route-id="@item.id"><i class="fa fa-pencil text-success"></i></a>
                                                <a asp-page="./Details" asp-route-id="@item.id"><i class="fa fa-info-circle text-primary"></i></a>
                                                <a asp-page="/Client/AddClient" asp-route-Emailid="@item.EMail">Add To Client</a>

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


